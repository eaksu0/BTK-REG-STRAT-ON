@model IEnumerable<Candidate>
 

@if (Model.Count()>0)
{
    <h6 class="display-6">
        Applications(@Model.Count())
    </h6>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>apply At</th>
                <th>Course Name</th>
            </tr>
        </thead>
        <tbody>
           @foreach(Candidate item in Model)
           {
            <tr>
                <td>@item.Email</td>
                <td>@item.fullName</td>
                <td>@item.applyAt</td>
                <td>@item.selectedCourse</td>
            </tr>
           }
        </tbody>
    </table>
}

else
{
    <div class=" alert alert-info">
        There is no applications. Please click here to <a class="alert-link" asp-action="Apply">apply</a>
    </div>
}